<?xml version="1.0" encoding="UTF-8" ?>

<project name="rbcpsample" default="all" basedir=".">

  <path id="CLASSPATH">
    <pathelement path="../PredictionServiceProvider/build"/>
    <pathelement location="../PredictionServiceProvider/dist/PredictionServiceProvider.jar"/>
    <pathelement location="."/>
  </path>

  <target name="clean">
    <delete dir="build"/>
    <delete dir="dist"/>
  </target>

  <target name="compile"  description="Compile Prediction demo">
    <mkdir dir="build" />

    <javac srcdir="src"
         includeantruntime="true"
         destdir="build"
         fork="yes"
         debug="on">
        <classpath refid="CLASSPATH"/>
        <compilerarg value="-g"/>
        <compilerarg value="-Xlint:overrides"/>
        <compilerarg value="-Xlint:unchecked"/>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <mkdir dir="dist"/>
    <jar destfile="dist/PredictionDemo.jar" basedir="build"/>
  </target>
  </project>